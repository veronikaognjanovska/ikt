@model List<Cinema.Domain.Identity.UserDto>

<div class="container">

    <table class="table mt-5">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">User Email</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                var item = Model[i];

                <tr>
                    <th scope="row">@(i+1)</th>
                    <td>@item.Email</td>
                    <td><a class="btn btn-outline-secondary" asp-action="ManageUserRoles" asp-route-userId="@item.Id">Manage User Roles</a></td>
                </tr>

            }
        </tbody>
    </table>
</div>